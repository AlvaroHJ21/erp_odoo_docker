<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Action -->
    <record model="ir.actions.act_window" id="action_teacher">
        <field name="name">Gesti√≥n de profesores</field>
        <field name="res_model">school.teacher</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Model -->
    <record id="view_teacher_form" model="ir.ui.view">
        <field name="name">Maestro</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <tree string="Libraries">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="teacher_view_form" model="ir.ui.view">
        <field name="name">teacher.view.form</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <form string="Profesor">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

