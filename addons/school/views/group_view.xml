<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action -->
    <record id="group_action" model="ir.actions.act_window">
        <field name="name">Gesti√≥n de grupos</field>
        <field name="res_model">grupo</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Model -->
    <record id="view_group_form" model="ir.ui.view">
        <field name="name">Grupos</field>
        <field name="model">grupo</field>
        <field name="arch" type="xml">
            <tree string="Grupos">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- From -->
    <record id="group_view_form" model="ir.ui.view">
        <field name="name">grupo.view.form</field>
        <field name="model">grupo</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="course_id"/>
                        <field name="teacher_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
